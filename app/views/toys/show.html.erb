<div class="page-container">
  <p id="notice"><%= notice %></p>
  <%= link_to "Back to the catalog", toys_path, class:"button-label" %>
  <div style="margin-top:40px;">
    <div class="cart-layout">
      <div style="margin-bottom:30px;">
        <div class="d-flex">
          <p><%= image_tag @toy.image, style:"width:30vw;" %></p>
          <div class="card" style="flex-direction:row;margin-left:30px">
            <div class="toy-show-content">
              <div class="text-toy-show">
                <div class="button-label" style="width:fit-content;margin-bottom:30px">
                  <%= @toy.age_category %>
                </div>
                <h2><%= @toy.name %></h2>
                <p><%= @toy.description %></p>
              </div>
              <%= simple_form_for [ @toy, @booking ] do |f| %>
                <%= f.submit "Add to card", class: 'button-pink btn-block', style:"text-align:center; border:none;" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

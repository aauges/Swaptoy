<div class="container-index">
  <div data-controller="refresh-list">
    <div class="image-back">
      <h2 style="margin-top:80px;">More choices,<br> less money.</h2>
      <p><%= image_tag "family.png", style:"width:100%;" %></p>
    </div>
    <div class="filters-layout">
      <div class="title-align-center" style="margin-top: 30px;margin-bottom:10px;">
        <h2 class="title-index-catalog" style="margin-top:40px;">Catalog</h2>
      </div>
      <h3 style="margin-bottom:30px;">Select the category</h3>
      <div class="card" style="padding:20px;width: 50%;margin-bottom:30px;">
        <div class="category-btns">
          <div class="button-label">
            <%= link_to 'Baby toys', toys_path(:baby_scope => "baby") %>
          </div>
          <div class="button-label">
            <%= link_to 'Toddler toys', toys_path(:toddler_scope => "toddler") %>
          </div>
          <div class="button-label">
            <%= link_to 'Pre-schooler toys', toys_path(:preschool_scope => "preschool") %>
          </div>
        </div>
      </div>
    </div>
    <%= render "searchresult" %>
  </div>
</div>

<div class="title-align-center">
  <h2>Dashboard</h2>
</div>

<div class="filters-layout" style="margin-top:80px;">
  <div class="card" style="width:100%;margin-bottom:30px;">
    <h4 style="margin-bottom:20px;">Subscription details:</h4>

    <div class="d-flex" style="justify-content: space-around">
      <div>
        <div class="d-flex" style="margin-right:20px;">
          <h5 style="margin-right:10px;">Subscription Start Date:</h5>
          <%= Date.today.strftime("%d %b %Y") %>
        </div>
        <div class="d-flex" style="margin-right:20px;">
          <h5 style="margin-right:10px;">Subscription Plan:</h5>
          <%= User.last.first_name = "Standard Plan" %>
        </div>
      </div>
      <div class="d-flex" style="margin-right:20px;">
        <h5 style="margin-right:10px;">Subscription End Date:</h5>
        <%= (Date.today + 30).strftime("%d %b %Y") %>
      </div>
    </div>
    <div style="margin-top:20px;">
      <%= link_to "Change Plan", subscription_path, class: 'button-pink' %>
    </div>
  </div>
</div>

<div class="d-flex">
  <div class="card" style="width:35%; margin-right:20px; height:fit-content;">
    <div class="title-align-center">
      <h4>My profile</h4>
    </div>
      <div>
      <div class="title-align-center">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/phila9", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, style:"width:40%;margin:15px;" %>
      </div>
      <div class="d-flex">
        <h5 style="margin-right:10px;">Name:</h5>
        <%= User.last.first_name = "Filip Zdravkovic" %>
      </div>
      <div class="d-flex">
        <h5 style="margin-right:10px;">Email:</h5>
        <%= User.last.email = "filip@user.com"  %>
      </div>
      <div class="d-flex">
        <h5 style="margin-right:10px;">Address:</h5>
        <%= User.last.address = "Torggatan 3, Växjõ, Sweden" %>
      </div>
      <div class="d-flex">
        <h5 style="margin-right:10px;">Phone:</h5>
        <%= User.last.phone_number = "+46 734587649" %>
      </div>
    </div>
  </div>
  <div class="card" style="width:65%; margin-left:15px; margin-bottom:30px;height:fit-content;">
    <% if @current_monthly_subscription.toys.empty? %>
    <div class="title-align-center">
      <h4>No toys selected</h4>
    </div>
    <% else %>
      <h4 class="title-align-center">Selected toys</h4>
    <% @current_monthly_subscription.toys.each do |toy| %>
      <div class="content-cart-layout">
        <%= cl_image_tag toy.image.key, style:"width:120px; margin:10px;" %>
        <h4 style="color: #6b7ddb;"><%= toy.name %></h4>
      </div>
    <% end %>
    <% end %>
  </div>
</div>

<div class="card" style="margin-top:30px;">
  <div class="title-align-center">
    <h4 style="margin-bottom:30px;">Previous toys</h4>
  </div>
    <% @previous_subscriptions.each do |sub| %>
    <div class="dropdown">
      <div class="row">
        <div class="col">
          <div class="tabs">
            <div class="tab" style="border-bottom:1px solid white;">
              <input type="checkbox" id="drop-<%= sub.id %>" class="checkbox-landing">
              <label class="tab-label" style="margin:0px;" for="drop-<%= sub.id %>"><h5 style="color:white;">Toys selected from: <%= sub.start_date.strftime("%d %b %Y") %> - <%= sub.end_date.strftime("%d %b %Y") %></h5></label>
              <div class="tab-content">
                <% sub.toys.each do |toy| %>
                <div class="content-cart-layout">
                  <%= cl_image_tag toy.image.key, style:"width:120px; margin:10px;" %>
                  <h4 style="color: #6b7ddb;"><%= toy.name %></h4>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
